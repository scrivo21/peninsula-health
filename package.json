{
  "name": "peninsula-health-shift-happens",
  "version": "2.0.0",
  "description": "Peninsula Health Shift Management System - Full Stack Application",
  "main": "index.js",
  "scripts": {
    "test": "./run-all-tests.sh",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:e2e": "node e2e-tests.js",
    "test:watch": "cd backend && npm run test:watch",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "healthcare",
    "roster",
    "scheduling",
    "shift-management",
    "peninsula-health"
  ],
  "author": "Peninsula Health",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "puppeteer": "^24.16.0"
  }
}